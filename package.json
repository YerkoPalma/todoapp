{
  "name": "todoapp",
  "version": "1.2.0",
  "description": "menubar todo app",
  "main": "index.js",
  "author": "Yerko Palma <yerko.palma@usach.cl>",
  "scripts": {
    "build": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.yerkopalma.Todoapp",
    "mac": {
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^5.0.4",
    "electron-builder": "^20.39.0",
    "electron-reload": "^1.4.0"
  },
  "dependencies": {
    "dragula": "^3.7.2",
    "electron-debug": "^3.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^3.3.0",
    "electron-unhandled": "^2.2.0",
    "electron-util": "^0.12.1",
    "menubar": "^6.0.3",
    "nanohtml": "^1.6.3",
    "nanologger": "^1.3.1",
    "nanomorph": "^5.4.0"
  }
}
